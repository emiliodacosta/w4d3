<!DOCTYPE html>
<html>
  <head>
    <title>NinetyNineCats</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>
  <body>
    <% if logged_in? %>
      <h5>Hello <%= current_user.username %></h5>
    <% else %>
      <a href="<%= new_session_url %>">Login</a>
    <% end %>
    <%= yield %>
  </body>
</html>
